<h1>Користувачі</h1>
<table class="table table-bordered">
  <thead>
  <tr class="info">
    <th>#</th>
    <th>Ім'я і прізвище</th>
    <th>Email</th>
    <th>Місто</th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.city %></td>
      <td>
      <% if current_user != user %>
        <%= link_to 'Вилучити користувача', user, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
      <%end%>  
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
